{
    "compilerOptions": {
        "noEmit": true,
        "strictNullChecks": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "target": "ES2020"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
